{
  "include": [
    "src",
    "test",
    "scripts",
    "eslint.config.mjs",
    "lint-staged.config.mjs"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [ "ES2022", "DOM.Iterable", "DOM" ],
